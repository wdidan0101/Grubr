<div id="grub-nav-bar">
  <div id="menu">
    <ul>
      <li><a id='grub-logo' href="/">Grub</a></li>
    </ul>
  </div> <!-- close menu div-->

  <div id="login-form">
      <% unless logged_in? %>
      <ul class="nav navbar-nav navbar-right login">
        <div>
          <%= form_for(:session, url: sessions_path, html: {class: "form-inline"}) do |f| %>
           <div class='form-group shift-up'>
              <%= f.label :email, class: 'sr-only' %> 
              <%= f.text_field :email, class:'form-control', placeholder:'Email'%> </div>
           <div class='form-group shift-up'>
              <%= f.label :password, class: "sr-only" %> 
              <%= f.password_field :password, class: 'form-control', placeholder:'Password' %> 
           </div>
              <%= f.submit "Sign In", class: "btn btn-default shift-up-2" %>
        </div>

        <div id="menu-b">
          <ul>
            <li><a id='sign-up'>Not a member?</a></li>
          </ul>
        </div>
      <% end %>
      <% else %>
        <!-- <li><%#= link_to "Log out", log_out_path, method: :delete%></li> -->
      <% end %>
    </div> <!-- close login-form div -->
</div><!-- /grub-nav-bar -->












